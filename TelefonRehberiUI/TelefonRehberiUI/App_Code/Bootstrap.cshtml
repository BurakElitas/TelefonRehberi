
@helper LinkButton(string url = "", string id = "", string color = "", string additional = "", string icon = "", string alt = "", string text = "")
{
    <a href="@url/@id" alt="@alt" class="btn btn-@color @additional"><i class="fa @icon"></i> @text</a>

}

@helper LinkButton(string url = "", string color = "", string additional = "", string icon = "", string alt = "", string text = "")
{
    <a href="@url" alt="@alt" class="btn btn-@color @additional"><i class="fa @icon"></i> @text</a>

}

@helper Button(string type = "", string color = "danger", string additional = "", string icon = "", string text = "")
{
    <button type="@type" class="btn btn-@color @additional"><i class="fa @icon"></i> @text</button>

}

@helper ModalPopup(string id = "", string title = "", bool close = true)
{

    <!-- Modal -->
    <div class="modal fade" id="@id" name="@id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">@title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="@(id+"_body")">

                </div>

                <div class="modal-footer" id="@(id+"_footer")">
                    @if (close)
                    {
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    }



                </div>
            </div>
        </div>
    </div>

}


